@model CustomerManagement.Entities.Customer

@{
    ViewBag.Title = "Müşteri Bilgisi Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
