<body>
    <div id="wrapper">
        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">
            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="/Login/IndexCustomer">
                <div class="sidebar-brand-text mx-3">Talep Yönetim Sistemi</div>
            </a>
            <!-- Divider -->
            <hr class="sidebar-divider my-0">
            @if (CurrentSession.User == null && CurrentSession.Customer == null)
            {
                <li class="nav-item active">
                    <a class="nav-link" href="/Login/IndexCustomer">
                        <i class="bg-login-image"></i>
                        <span>Giriş</span>
                    </a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/Customer/Create">
                        <i class="bg-login-image"></i>
                        <span>Kaydol</span>
                    </a>
                </li>
                <!-- Divider -->
                <hr class="sidebar-divider">
            }
            else if (CurrentSession.User != null)
            {
                <li class="nav-item">
                    <a class="nav-link" href="~/Category/Index">
                        @*<i class="fas fa-fw fa-chart-area"></i>*@
                        @*<i class="glyphicon glyphicon-folder-open"></i>*@
                        <i class="fas fa-fw fa-wrench"></i>
                        <span>Kategoriler</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/Customer/Index">
