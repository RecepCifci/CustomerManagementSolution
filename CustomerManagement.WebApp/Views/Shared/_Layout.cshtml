    <title>Giriş Sayfası</title>

    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.js"></script>
    <script src="~/Scripts/Theme/js/sb-admin-2.min.js"></script>    

    <link href="~/Scripts/Theme/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
