            </div>
        </div>*@



        <div class="form-group">
            <div class="col-lg-1 mb-4">
                <div class="card bg-primary text-white shadow">
                    <button class="card bg-primary text-white shadow" type="submit"><span style="text-align:center">Güncelle</span></button>
                </div>
            </div>
        </div>
    </div>
}

