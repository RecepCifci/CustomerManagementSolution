@using CustomerManagement.WebApp.Models
@model IEnumerable<CustomerManagement.Entities.Incident>
@{
    ViewBag.Title = "Talep Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<p>
    @Html.ActionLink("Talep Oluştur", "Create")
</p>

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">@ViewBag.Title</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Title)
                            </th>
                            <th>
                                Müşteri Adı
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Category.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Product.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.StartDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.EndDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.StateCode)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Description)
                            </th>
                            <th>
                                Sahibi
                            </th>
                            @if (CurrentSession.Customer == null)
                            {
                                <th></th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td width="12%">
                                    @Html.DisplayFor(modelItem => item.Title)
                                </td>
                                <td width="8%">
                                    @Html.DisplayFor(modelItem => item.Customer.Fullname)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Category.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Product.Name)
                                </td>
                                <td width="10%">
                                    @Html.DisplayFor(modelItem => item.StartDate)
                                </td>
                                <td width="10%">
                                    @Html.DisplayFor(modelItem => item.EndDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StateCode)
                                </td>
                                <td width="20%">
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td width="4%">
                                    @Html.DisplayFor(modelItem => item.Owner.Fullname)
                                </td>
                                @if (CurrentSession.Customer == null)
                                {
                                    <td>
                                        @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }) |
                                        @Html.ActionLink("Detaylar", "Details", new { id = item.Id }) |
                                        @Html.ActionLink("Sil", "Delete", new { id = item.Id })
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>